@model  SmartForm.ViewModels.FormTemplateDetailsVM


<link href="~/Content/FormTemplate/formtemplate-create.css" rel="stylesheet" />
<div id="container" class="mt-2">
    <div class="row">
        <div class="col-md-2 sidebar pr-0">
                    <ul>
                        <li><a href="/FormTemplates/Create" id="addnew"><i class="fa fa-plus icon"></i>New FormTemplate</a></li>
                        <li id="accordion">Form Templates<span class="fa fa-caret-down ml-1"></span>
                            <ul class="nested">
                                @foreach (var item in @ViewBag.FormTemplateList)
                                {
                                    <li data-guid="@item.Guid">@item.Name</li>
                                }
                            </ul>
                        </li>
                    </ul>
        </div>
        <div class="col-md-10 p-0 pl-2 pr-2">@Html.Partial("_Index")</div>
    </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="formtemplatefield_delete">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="formTemplateModal" tabindex="-1" role="dialog" aria-labelledby="formTemplateLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formTemplateLabel">Are you sure you want to delete this FormTemplate?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="formtemplate_delete">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/FormTemplates/formtemplate.main.js"></script>
